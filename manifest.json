{
  "manifest_version": 2,

  "name": "lun.ua helper",
  "description": "This plugin allow to mark building by advantage or disadvantage",
  "version": "0.1",

  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "https://ajax.googleapis.com/"
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'",
 "browser_action": {
    "default_icon": "logo.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [ {
  "css":["style.css"],
  "matches": [
    "*://lun.ua/uk/%D0%BD%D0%BE%D0%B2%D0%BE%D0%B1%D1%83%D0%B4%D0%BE%D0%B2%D0%B8*",
    "*://lun.ua/uk/новобудови*",
    "*://lun.ua/ru/новостройки*",
    "*://lun.ua/ru/все-новостройки*"
  ],
  "js": ["jquery-3.5.1.min.js", "background.js", "script.js"],
  "run_at": "document_start"
} ]
}
